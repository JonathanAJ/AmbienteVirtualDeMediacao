CREATE TABLE usuario
(
  id serial NOT NULL,
  cpf_login character varying(11) NOT NULL,
  senha character varying(20) COLLATE pg_catalog."pt_BR.utf8" NOT NULL,
  nome character varying(90) COLLATE pg_catalog."pt_BR.utf8" NOT NULL,
  CONSTRAINT usuario_pkey PRIMARY KEY (id)
);

CREATE TABLE posts
(
  id serial NOT NULL,
  texto text COLLATE pg_catalog."pt_BR.utf8" NOT NULL,
  id_pertence integer NOT NULL,
  CONSTRAINT posts_pkey PRIMARY KEY (id),
  CONSTRAINT id_pertence_fk FOREIGN KEY (id_pertence)
      REFERENCES usuario (id) MATCH SIMPLE
      ON UPDATE NO ACTION ON DELETE NO ACTION
);