<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>AmbienteVirtualDeMediacao</display-name>
  <filter>
    <filter-name>FiltroPostagem</filter-name>
    <filter-class>com.mediacaovirtual.controller.filtros.FiltroPostagem</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroPostagem</filter-name>
    <url-pattern>/pages/postagem.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FiltroSessao</filter-name>
    <filter-class>com.mediacaovirtual.controller.filtros.FiltroSessao</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroSessao</filter-name>
    <url-pattern>/pages/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FiltroXSS</filter-name>
    <filter-class>com.mediacaovirtual.controller.filtros.FiltroXSS</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroXSS</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ServletAdaptor</servlet-name>
    <servlet-class>com.sun.jersey.server.impl.container.servlet.ServletAdaptor</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAdaptor</servlet-name>
    <url-pattern>/webs/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>